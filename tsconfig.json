{
    "compilerOptions": {
        "baseUrl": "src",
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}