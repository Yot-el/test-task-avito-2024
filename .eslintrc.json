{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "ignorePatterns": ["**.config.js"],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals":true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unreachable":[
            "error"
        ],
        "no-extra-semi":[
            "error"
        ],
        "block-spacing":[
            "error",
            "always"
        ],
        "brace-style":[
            "error",
            "1tbs",
            {
                "allowSingleLine":true
            }
        ],
        "comma-style":[
            "error",
            "last"
        ],
        "no-trailing-spaces":[
            "error",
            {
                "skipBlankLines":true,
                "ignoreComments":true
            }
        ],
        "object-curly-newline":[
            "error",
            {
                "multiline":true
            }
        ],
        "object-curly-spacing":[
            "error",
            "always",
            {
                "arraysInObjects":true,
                "objectsInObjects":true
            }
        ],
        "no-console":[
            "warn"
        ]
    }
}
